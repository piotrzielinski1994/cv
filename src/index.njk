<!DOCTYPE html>
<html lang="us">

  <head>
    <meta charset="UTF-8" />
    <title>{{ heading }}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;800&display=swap" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="./styles.css" />
  </head>

  <body>
    <div class="page">
      <div class="main-layout">

        <aside class="details content">

          <img class="photo" src="./photo.jpg" />

          {% for section in sidebar %}
            <section class="section">

              <h2 class="section__heading">{{ section.heading }}</h2>

              <div class="section__content">
                <dl class="data">

                  {% for data in section.content %}
                    <dt class="data__key">{{ data.key }}</dt>
                    <dd class="data__value">{{ data.value | safe  }}</dd>
                  {% endfor %}

                </dl>
              </div>

            </section>
          {% endfor %}

        </aside>

        <main class="main content">

          <h1 class="title">{{ heading }}</h1>

          {% for section in main %}
            <section class="section">

              <h2 class="section__heading">{{ section.heading }}</h2>

              <div class="section__content">

                {% for subsection in section.content %}
                  <article class="exp">

                    {% if (subsection.date or subsection.heading or subsection.subheading or subsection.additional) %}
                      <header class="exp__header">
                        {% if subsection.date %} <span class="exp__date">{{ subsection.date }}</span> {% endif %}
                        {% if subsection.heading %} <h3 class="exp__heading">{{ subsection.heading }}</h3> {% endif %}
                        {% if subsection.subheading %} <span class="exp__subheading">{{ subsection.subheading }}</span> {% endif %}
                        {% if subsection.additional %} <span class="exp__additional">{{ subsection.additional }}</span> {% endif %}
                      </header>
                    {% endif %}

                    {% if subsection.items.length %}
                      <ul class="list">

                        {% for item in subsection.items %}
                          <li class="list__item">{{ item | safe }}</li>
                        {% endfor %}

                      </ul>
                    {% endif %}

                  </article>
                {% endfor %}

              </div>
            </section>
          {% endfor %}

        </main>

        <footer class="clause">
          <p>{{ clause }}</p>
        </footer>

      </div>
    </div>
  </body>
</html>
